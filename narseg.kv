

<MedicalImage>:
    image: texture_rect

    canvas.before:
        Color:
            rgba: .5, .5, .5, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

    Label:
        pos: root.pos
        size: root.size
        text: "Drag & Drop or Open Files"

    Image:
        id: texture_rect
        pos: root.pos
        size: root.size
        background_color: 0, 0, 0, 0

<NArSegInterface>:
    magnitude: magnitude_image
    phase: phase_image

    size: root.size

    FloatLayout:
        size: root.size
        MedicalImage:
            id: magnitude_image
            pos_hint: {"top": 1, "left": 1}
            size_hint: 0.5, 0.6

        MedicalImage:
            id: phase_image
            pos_hint: {"top": 1, "right": 1}
            size_hint: 0.5, 0.6

        GridLayout:
            cols: 2
            pos_hint: {"top": 0.4}
            size_hint: 0.35, 0.25
            padding: 30, 30, 30, 20
            spacing: 25, 10
            Button:
                text: "Original"

            Button:
                text: "4 Arteries"

            Button:
                text: "Binary"

            Button:
                text: "6 Arteries"

            Button:
                text: "Multi Label"

        GridLayout:
            cols: 2
            size_hint: 0.35, 0.10
            padding: 30, 30, 30, 20
            spacing: 25, 10
            Button:
                text: "Open Files"

            Button:
                text: "Download Results"

