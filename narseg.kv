<MedicalImage>:
    image: texture_rect

    canvas.before:
        Color:
            rgba: .5, .5, .5, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height

    Label:
        pos: root.pos
        size: root.size
        text: "Drag & Drop or Open Files"

    Image:
        id: texture_rect
        pos: root.pos
        size: root.size
        background_color: 0, 0, 0, 0

<NArSegInterface>:
    magnitude: magnitude_image
    phase: phase_image

    size: root.size

    FloatLayout:
        size: root.size
        MedicalImage:
            id: magnitude_image
            pos_hint: {"top": 1, "left": 1}
            size_hint: 0.5, 0.6

        MedicalImage:
            id: phase_image
            pos_hint: {"top": 1, "right": 1}
            size_hint: 0.5, 0.6

        GridLayout:
            cols: 2
            pos_hint: {"top": 0.4}
            size_hint: 0.35, 0.25
            padding: 30, 30, 30, 20
            spacing: 25, 15

            ToggleButton:
                text: "ORIGINAL"
                font_name: 'Lato/Lato-Bold.ttf'
                group: 'view_type'
                state: 'down'
                background_down: 'images/bg-white.png'
                background_color: (1, 1, 1, 1) if self.state == 'down' else (0, 0, 0, 1)
                color: (0, 0, 0, 1) if self.state == 'down' else (1, 1, 1, 1)
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Line:
                        width: 4
                        rectangle: self.x, self.y, self.width, self.height

            ToggleButton:
                text: "6 ARTERIES"
                font_name: 'Lato/Lato-Bold.ttf'
                group: 'artery_select_type'
                state: 'down'
                background_down: 'images/bg-white.png'
                background_color: (1, 1, 1, 1) if self.state == 'down' else (0, 0, 0, 1)
                color: (0, 0, 0, 1) if self.state == 'down' else (1, 1, 1, 1)
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Line:
                        width: 4
                        rectangle: self.x, self.y, self.width, self.height

            ToggleButton:
                text: "BINARY"
                font_name: 'Lato/Lato-Bold.ttf'
                group: 'view_type'
                background_down: 'images/bg-white.png'
                background_color: (1, 1, 1, 1) if self.state == 'down' else (0, 0, 0, 1)
                color: (0, 0, 0, 1) if self.state == 'down' else (1, 1, 1, 1)
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Line:
                        width: 4
                        rectangle: self.x, self.y, self.width, self.height

            ToggleButton:
                text: "4 ARTERIES"
                font_name: 'Lato/Lato-Bold.ttf'
                group: 'artery_select_type'
                background_down: 'images/bg-white.png'
                background_color: (1, 1, 1, 1) if self.state == 'down' else (0, 0, 0, 1)
                color: (0, 0, 0, 1) if self.state == 'down' else (1, 1, 1, 1)
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Line:
                        width: 4
                        rectangle: self.x, self.y, self.width, self.height

            ToggleButton:
                text: "MULTI LABEL"
                font_name: 'Lato/Lato-Bold.ttf'
                group: 'view_type'
                background_down: 'images/bg-white.png'
                background_color: (1, 1, 1, 1) if self.state == 'down' else (0, 0, 0, 1)
                color: (0, 0, 0, 1) if self.state == 'down' else (1, 1, 1, 1)
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Line:
                        width: 4
                        rectangle: self.x, self.y, self.width, self.height

        GridLayout:
            cols: 2
            size_hint: 0.35, 0.10
            padding: 30, 30, 30, 20
            spacing: 25, 10
            Button:
                text: "OPEN FILES"
                font_name: 'Lato/Lato-Bold.ttf'
                background_down: 'images/bg-white.png'
                background_color: (1, 1, 1, 1) if self.state == 'down' else (0, 0, 0, 1)
                color: (0, 0, 0, 1) if self.state == 'down' else (1, 1, 1, 1)
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Line:
                        width: 4
                        rectangle: self.x, self.y, self.width, self.height

            Button:
                text: "SAVE RESULTS"
                font_name: 'Lato/Lato-Bold.ttf'
                background_down: 'images/bg-white.png'
                background_color: (1, 1, 1, 1) if self.state == 'down' else (0, 0, 0, 1)
                color: (0, 0, 0, 1) if self.state == 'down' else (1, 1, 1, 1)
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Line:
                        width: 4
                        rectangle: self.x, self.y, self.width, self.height

        ResultsTable:
            padding: 30, 30, 30, 30
            pos_hint: {"top": 0.4, "right": 1}
            size_hint: 0.65, 0.4


<ResultsTable>:
    table: table_layout

    GridLayout:
        id: table_layout
        pos: root.pos
        size: root.size
        padding: 30, 30, 30, 30
        row_force_default: True
        row_default_height: 70
        cols: 7